// Test Vec::pop function
// Tests removing elements from a Vec and verifying size management

fn test_pop_basic(): void {
  (:= v (Vec::new<i32>))
  (printf "Initial: size=%d, capacity=%d\n" (Vec::len v) (Vec::capacity v))

  // Push three elements
  (:=< v (Vec::push v 10))
  (:=< v (Vec::push v 20))
  (:=< v (Vec::push v 30))
  (printf "After pushing 10, 20, 30: size=%d, capacity=%d\n" (Vec::len v) (Vec::capacity v))
  (printf "v[0]=%d, v[1]=%d, v[2]=%d\n"
    (Vec::get v 0)
    (Vec::get v 1)
    (Vec::get v 2))

  // Get last element before popping
  (:= last (Vec::last v))
  (printf "Last element before pop: %d\n" last)

  // Pop the last element
  (:=< v (Vec::pop v))
  (printf "After pop: size=%d, capacity=%d\n" (Vec::len v) (Vec::capacity v))

  // Verify remaining elements are still accessible
  (printf "Remaining elements: v[0]=%d, v[1]=%d\n"
    (Vec::get v 0)
    (Vec::get v 1))

  // Get and pop again
  (:= last2 (Vec::last v))
  (printf "Last element before second pop: %d\n" last2)
  (:=< v (Vec::pop v))
  (printf "After second pop: size=%d, capacity=%d\n" (Vec::len v) (Vec::capacity v))
  (printf "Remaining element: v[0]=%d\n" (Vec::get v 0))
}

fn test_push_and_pop(): void {
  (:= v (Vec::new<i32>))
  (printf "\n=== Testing Push and Pop together ===\n")

  // Build up a vec
  (:=< v (Vec::push v 100))
  (:=< v (Vec::push v 200))
  (:=< v (Vec::push v 300))
  (:=< v (Vec::push v 400))
  (:=< v (Vec::push v 500))
  (printf "After pushing 5 elements: size=%d, capacity=%d\n" (Vec::len v) (Vec::capacity v))

  // Pop some elements
  (:= elem5 (Vec::last v))
  (:=< v (Vec::pop v))
  (printf "Popped: %d, size=%d\n" elem5 (Vec::len v))

  (:= elem4 (Vec::last v))
  (:=< v (Vec::pop v))
  (printf "Popped: %d, size=%d\n" elem4 (Vec::len v))

  (:= elem3 (Vec::last v))
  (:=< v (Vec::pop v))
  (printf "Popped: %d, size=%d\n" elem3 (Vec::len v))

  // Push again
  (:=< v (Vec::push v 600))
  (printf "After pushing 600: size=%d\n" (Vec::len v))

  // Verify final state
  (printf "Final elements: v[0]=%d, v[1]=%d, v[2]=%d\n"
    (Vec::get v 0)
    (Vec::get v 1)
    (Vec::get v 2))
}

alloc fn main(): void {
  (printf "=== Test Pop Basic ===\n")
  (test_pop_basic)

  (test_push_and_pop)

  (printf "\n=== All Vec::pop tests passed! ===\n")
}
