// Test array literal element type inference without explicit type annotation

fn test(): void {
  (:= v1 [1, 2, 3])           // Should infer Vec<i32>
  (:= v2 [true, false])       // Should infer Vec<bool>
  (printf "len=%d\n" (Vec::len v1))
  (printf "v1[0]=%d\n" (Vec::get v1 0))
  (printf "v1[1]=%d\n" (Vec::get v1 1))
  (printf "v1[2]=%d\n" (Vec::get v1 2))

  (printf "v2 len=%d\n" (Vec::len v2))
  (printf "v2[0]=%d\n" (Vec::get v2 0))
  (printf "v2[1]=%d\n" (Vec::get v2 1))
}

alloc fn main(): void {
  (test)
}
